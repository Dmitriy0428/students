console.log(` Написать функцию, которая 25 раз выведет в консоль: «Я номер 1», «я номер 2», «Я номер 3» и так далее до 25`)
function Yanomer(){
 for(let i=1;i<26;i++){
  console.log('"я номер',i,'"')
 }
}
Yanomer()

